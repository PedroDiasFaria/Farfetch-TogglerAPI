@model IEnumerable<MVC.Models.mvcFeatureModel>

@{
    ViewBag.Title = "Toggle Features";
}

<h2>EditFeatures</h2>
<table class="table table-striped">
    <thead class="table-heading">
        <tr>
            <th>
                Feature Name
            </th>
            <th>
                Feature Type
            </th>
            <th>
                Toggle Flag
            </th>
            <th>
                Permissions
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FeatureType)
        </td>
        <td>
            @if (item.FeatureFlag)
        {
            <div class="feature-flag-on">On</div>
        }
        else
        {
            <div class="feature-flag-off">Off</div>
        }
        </td>
        <td>
            @foreach (var perm in item.FeaturePermissionsList)
        {
            <div>@perm</div>
    }
        </td>
        <td>
            <a href="@Url.Action("ToggleFeature", "Feature", new { featureId = item.Id})" class="btn btn-default"><i class="fa fa-power-off"></i> Toggle Feature </a>
        </td>
    </tr>
    }
</table>

@model IEnumerable<MVC.Models.mvcFeatureModel>

@{
    ViewBag.Title = "ViewFeatures";
}

<h2>Features available to users of type: @ViewBag.userType </h2>
<h3>User: @ViewBag.userName</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FeatureType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FeatureFlag)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @switch (item.FeatureType)
            {
                case "BlueButton":
                    <div class="blueBtn btn">@item.FeatureType</div>
                    break;
                case "GreenButton":
                    <div class="greenBtn btn">@item.FeatureType</div>
                    break;
                case "RedButton":
                    <div class="redBtn btn">@item.FeatureType</div>
                    break;
            }
        </td>
        <td>
            @if (item.FeatureFlag)
            {
                <div class="feature-flag-on">On</div>
                }
            else
            {
                <div class="feature-flag-off">Off</div>
            }
        </td>
    </tr>
}
</table>